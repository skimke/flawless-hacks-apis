<ul class="pager">
  <li><a href="/"><< Back to search</a></li>
</ul>

<div>
  <div class="jumbotron">
    <h1><%= @artist['name'] %></h1>
    <br>
    <a href="/artists/?id=<%= @artist['id']%>">
      <img src=<%="#{@artist_image_url}"%> alt="">
    </a>
  </div>

  <br>

  <div>
    <% if @related_artists.any? %>
      <br>
      <h2>Related artists</h2>
      <div>
        <ol>
          <% @related_artists.take(5).each do |artist| %>
            <li>
              <div>
                <p><%= artist['name'] %></p>
                <% if artist['images'].any? %>
                  <a href="/artists/?id=<%= artist['id']%>">
                    <img src=<%="#{artist['images'].first['url']}"%> alt="artist-image">
                  </a>
                <% else %>
                  <a href="/artists/?id=<%= artist['id']%>">
                    <img src="http://i.dailymail.co.uk/i/pix/2016/05/11/10/34091E0A00000578-3584384-image-a-8_1462957988141.jpg" alt="">
                  </a>
                <% end %>
              </div>
            </li>
          <% end %>
        </ol>
      </div>
    <% end %>
</div>
</div>